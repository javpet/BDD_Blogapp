<div class="container">
  <div class="row">
    <div class="col-md-12">

      <!-- Flash messages -->
      <% flash.each do |key, message| %>
        <div class="text-center alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
          <%= message %>
        </div>
      <% end %>

      <!-- Main content -->
      <%= yield %>

    </div>
  </div>
</div>